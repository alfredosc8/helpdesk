#title=View Ticket Comments
#namespace=Ticket/comments
#assetId=TICKET0000000000000005
<style>
    .commentTdLeft{
		border-right:solid white 3px;
		border-bottom:solid white 3px;
		padding:2px;
		background-color:#f0f0f0;
	}
    .commentTdRight {
        border-bottom: solid white 3px;
        padding:5px;
		background-color:#f0f0f0;
    }
</style>

<table width="100%" border="0" cellpadding="0" cellspacing="0">
<tbody >
<tmpl_loop comments_loop>
    <tr>
        <td width="27%" class="commentTdLeft">
            <b><tmpl_var alias></b><br />
            <img src="<tmpl_var rating_image>" alt="<tmpl_var rating>" title="<tmpl_var rating>"/><br />
            <span style="font-size: 10px"><tmpl_var datetime_formatted></span>
        </td>
        <td width="73%" class="commentTdRight">
            <tmpl_var comment>
        </td>
    </tr>
</tmpl_loop>
</tbody>
</table>
	